{
  "name": "seriefy",
  "version": "1.0.0",
  "description": "An app to get closer to your favourite series",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "public": "mkdir -p public",
    "build-js": "NODE_PATH=. browserify -t [ babelify --presets [es2015] ] src/index.js > public/app.js",
    "copy-files": "cp src/index.html public/index.html && cp src/index.css public/app.css",
    "build": "npm run public && npm run build-js && npm run copy-files",
    "serve": "serve public"
  },
  "keywords": [
    "series",
    "shows",
    "tv"
  ],
  "author": "Alejandro Moreno",
  "license": "ISC",
  "dependencies": {
    "jquery": "^2.2.3",
    "page": "^1.7.1",
    "qs": "^6.1.0",
    "serve": "^1.4.0"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.6.0",
    "babelify": "^7.3.0",
    "browserify": "^13.0.0"
  }
}
