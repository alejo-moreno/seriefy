{
  "name": "seriefy",
  "version": "1.0.0",
  "description": "An app to get closer to your favourite series",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "public": "mkdir -p public",
    "build-js": "NODE_PATH=. browserify -t [ babelify --presets [es2015] ] src/client/index.js > public/app.js",
    "copy-files": "cp src/client/index.html public/index.html && cp src/client/index.css public/app.css",
    "build": "npm run public && npm run build-js && npm run copy-files",
    "serve": "NODE_PATH=. babel-node src/server --presets es2015",
    "start": "npm run build && npm run serve"
  },
  "keywords": [
    "series",
    "shows",
    "tv"
  ],
  "author": "Alejandro Moreno",
  "license": "ISC",
  "dependencies": {
    "babel-cli": "^6.7.7",
    "babel-preset-es2015": "^6.6.0",
    "express": "^4.13.4",
    "jquery": "^2.2.3",
    "mongoose": "^4.4.14",
    "page": "^1.7.1",
    "qs": "^6.1.0",
    "socket.io": "^1.4.5",
    "socket.io-client": "^1.4.5",
    "tv-maze": "^1.1.0",
    "xss": "^0.2.12"
  },
  "devDependencies": {
    "babelify": "^7.3.0",
    "browserify": "^13.0.0"
  }
}
